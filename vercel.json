{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "dist/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/server.js" },
    { "src": "/fruit-app", "dest": "dist/index.html" },
    { "src": "/fruit-app/(.*)", "dest": "dist/index.html" },
    { "src": "/(.*)", "dest": "dist/index.html" }
  ]
}
